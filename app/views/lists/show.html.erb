<h1><%= @list.name %></h1>

<%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary mb-3" %>
<%= link_to "Back", lists_path, class: "btn btn-secondary mb-3" %>

<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <div>
        <strong><%= bookmark.movie.title %></strong>
        <div class="text-muted"><%= bookmark.comment %></div>
      </div>

      <%= link_to "Delete",
                  bookmark_path(bookmark),
                  data: { turbo_method: :delete, turbo_confirm: "Sure?" },
                  class: "btn btn-sm btn-danger" %>
    </li>
  <% end %>
</ul>
