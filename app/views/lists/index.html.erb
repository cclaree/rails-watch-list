<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">My Lists</h1>
  <%= link_to "Create a new list", new_list_path, class: "btn btn-primary" %>
</div>

<% if @lists.empty? %>
  <div class="alert alert-info">
    No lists yet. Create your first one!
  </div>
<% else %>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-12 col-md-6 col-lg-4 mb-3">
        <div class="card shadow-sm h-100">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= list.name %></h5>
            <p class="card-text text-muted mb-4">A curated selection of movies.</p>

            <div class="mt-auto">
              <%= link_to "Open list", list_path(list), class: "btn btn-outline-primary w-100" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
